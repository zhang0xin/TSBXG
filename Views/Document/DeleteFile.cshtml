@model TSBXG.Models.Document

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">删除文档</div>

    <table class="table table-hover">
        <tr>
            <td class="display-label">
                @Html.DisplayNameFor(model => model.Title)
            </td>
            <td class="display-field">
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td class="display-label">
                @Html.DisplayNameFor(model => model.AttachFile)
            </td>
            <td class="display-field">
                @if (Model.AttachFile != null)
                {
                    <a class="btn btn-default btn-sm" href="@Url.Action("FileById", "Document", new { Model.Id })"><span class="glyphicon glyphicon-file"></span>下载文件</a>
                }
            </td>
        </tr>
        <tr>
            <td class="display-label">
                @Html.DisplayNameFor(model => model.AttachFileType)
            </td>
            <td class="display-field">
                @Html.DisplayFor(model => model.AttachFileType)
            </td>
        </tr>
    </table> 
    
    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            <input type="submit" value="确认" class="btn btn-primary" />
            @Html.ActionLink("返回", "ListFile", new { category = Request["category"] }, new { @class = "btn btn-default" })
        }
    </div>
</div>
