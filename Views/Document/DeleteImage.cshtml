@model TSBXG.Models.Document

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">删除图像</div>

    <table class="table table-hover">
        <tr>
            <td class="display-label">
                @Html.DisplayNameFor(model => model.ImageData)
            </td>
            <td class="display-field">
                <img width="400", height="100" src="@Url.Action("ImageById", "Document", new { Model.Id })" />
            </td>
        </tr>
    </table>

    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            <input type="submit" value="确认" class="btn btn-primary" />
            @Html.ActionLink("返回", "ListImage", new { category = Request["category"] }, new { @class = "btn btn-default" })
        }
    </div>
</div>

