@{
    ViewBag.Title = "ViewNews";
    Layout = "~/Views/Shared/_HomeContentLayout.cshtml";
}
@for (int i = 0; i < Model.Length; i++)
{ 
    <div class="col-md-4">
        <div class="thumbnail">
            <a href="~/Document/ViewNewsContent/@Model[i].Id?category=chanpinzhanshi">
                <img alt="@Model[i].Title" src="@Url.Action("ImageById", "Document", new { Model[i].Id })" />
                <div class="caption">
                    @Model[i].Title
                </div>
            </a>
        </div>
    </div>
}